<!-- This is the first page user sees on login -->

<!-- This will include the content of header content from partials -->
{{>header}}

<div class="main-image">
    {{#each user.places}}
        <!-- <div class="row center"> -->
        <div>
            <div class="col-sm-6 col-md-4 center ">
                <div class="thumbnail card-panel hoverable ">
                    <img src="{{this.place_url}}" alt="Place_image" class=" col-md-12 index-photo-name">
                    <div class="caption">
                        <h3 class="text-uppercase ">{{this.name}}</h3>
                        <!-- The following are for buttons info, edit and delte -->
                        <p class='col-md-4 col-sm-4 col-xs-4'><a href="{{../user.id}}/places/{{this.id}}/show" class="btn btn-default info" role="button">Info</a></p>

                        <p class='col-md-4 col-sm-4 col-xs-4'><a href="{{../user.id}}/places/{{this.id}}/edit" class="btn btn-default edit" role="button">Edit</a></p>
                        <!-- This will calls the delete route in places.js -->
                        <form action="/{{../user.id}}/places/{{this.id}}?_method=Delete" method="POST" >
                            <input type="submit" name="" class="btn btn-default delete" role="button" value="Delete">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>

<!-- This is for add new button -->
<div>
    <div class="center add-button">
    <!-- on clicking add new it call the new route in places.js -->
    <form action="/{{user.id}}/places/new">
        <input type="Submit" value="Add New" class="center btn btn-primary">
    </form>
</div>