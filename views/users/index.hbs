{{>header}}
<div class="main-image">
{{#each user.places}}

<!-- <div class="row center"> -->
<div>
  <div class="col-sm-6 col-md-6 center">
    <div class="thumbnail card-panel hoverable">
      <img src="{{this.place_url}}" alt="Place_image">
      <div class="caption">
        <h3 class="text-uppercase">{{this.name}}</h3>
        <p class='col-md-4'><a href="{{../user.id}}/places/{{this.id}}/show" class="btn btn-info" role="button">Info</a></p>
        <p class='col-md-4'><a href="{{../user.id}}/places/{{this.id}}/edit" class="btn btn-primary" role="button">Edit</a></p>
        <form action="/{{../user.id}}/places/{{this.id}}?_method=Delete" method="POST" >
        <input type="submit" name="" class="btn btn-danger" role="button" value="Delete">
        </form>



      </div>
    </div>
  </div>
</div>

{{/each}}


</div>
<div>

<div class="center add-button">
<form action="/{{user.id}}/places/new">
    <input type="Submit" value="Add New" class="center btn btn-primary">
</form>
</div>